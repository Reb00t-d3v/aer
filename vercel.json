{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/images/(.*)",
      "destination": "server/index.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "server/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/api/$1",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-for"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}