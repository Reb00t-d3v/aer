{
  "version": 2,

  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/images/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "server/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  },
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/api/$1",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-for"
        }
      ]
    }
  ]
}