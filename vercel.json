{
  "routes": [
    {
      "src": "/api/images/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "server/index.ts"
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/api/$1",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-for"
        }
      ]
    }
  ]
}